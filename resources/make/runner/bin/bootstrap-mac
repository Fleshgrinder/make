##
## Install recommended software for using make runner on a Mac.
##

if ! command -v brew &>/dev/null; then
    /usr/bin/ruby -e "$(curl -fqsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

brew install \
    bash \
    coreutils \
    curl-openssl \
    dos2unix \
    findutils \
    gawk \
    git \
    gnu-getopt \
    gnu-sed \
    gnu-tar \
    gnupg \
    grep \
    hub \
    jq \
    make \
    readline

brew cask install \
    docker
