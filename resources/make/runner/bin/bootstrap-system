#!/usr/bin/env bash
set -Eeuo pipefail

################################################################################
##                       !!!! DO NOT EDIT THIS FILE !!!!                      ##
##                                                                            ##
## This file is part of https://github.com/fleshgrinder/make-runner and       ##
## overwritten if you update your installation of the framework. Refer to the ##
## project documentation for more information. Contributions are welcome!     ##
##                                                                            ##
##                       !!!! DO NOT EDIT THIS FILE !!!!                      ##
################################################################################

##
## Installs recommended software for using make-runner by auto-detecting the
## current OS for maximum portability of scripts.
##

cd "$(dirname "${BASH_SOURCE[0]}")"

case "$OSTYPE" in
darwin*)
    exec ./bootstrap-mac
    ;;
linux*)
    if [[ -f /etc/os-release ]]; then
        ID=
        eval "$(cat /etc/os-release)"
        if [[ -x "bootstrap-$ID" ]]; then
            exec "./bootstrap-$ID"
        fi
    fi
    ;;
esac

echo -e "
$OSTYPE is not supported, have a look at the existing bootstrap scripts to \
understand what software is recommended and install it.

Open an issue at https://github.com/Fleshgrinder/make-runner to request \
support for your OS.
" >&2

exit 1
