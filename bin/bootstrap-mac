#!/usr/bin/env bash
set -Eeuo pipefail

#!
#! Install recommended software for using make runner on a Mac.
#!

if ! command -v brew >/dev/null 2>&1; then
    /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

brew install \
    bash \
    coreutils \
    curl \
    dos2unix \
    findutils \
    gawk \
    git \
    gnu-getopt \
    gnu-sed \
    gnu-tar \
    gnupg \
    grep \
    hub \
    jq \
    make \
    readline

brew cask install \
    docker
